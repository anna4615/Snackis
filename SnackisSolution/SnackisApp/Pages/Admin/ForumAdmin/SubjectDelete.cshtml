@page
@model SnackisApp.Pages.Admin.ForumAdmin.SubjectDeleteModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "SubjectDelete";
}

<h1>Radera ämne</h1>
<hr />

<h6>Vill du radera det här ämnet?</h6>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Subject.Id" />
            <input type="hidden" asp-for="Subject.ForumId" />
            <input type="hidden" asp-for="Subject.Name" />
                <p>@Model.Subject.Name</p>
            <div class="form-group">
                <input type="submit" value="Radera" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Radera inte</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
